<UserControl x:Class="UserManagement.UI.TestButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
        <Grid 
              Grid.Column="1">
            <ToggleButton Margin="2,5"
                          HorizontalContentAlignment="Stretch"
                          IsChecked="{Binding IsCheckedIndifferent}"
                          Style="{StaticResource RoundToggleButtonStyle}"
                          AutomationProperties.AutomationId="IndifferentButton" >
                <ToggleButton.Content>
                    <Grid Margin="5,5"
                          HorizontalAlignment="Center">
                        <TextBlock VerticalAlignment="Center"
                                   FontSize="14"
                                   Text="Indifferent" />
                    </Grid>
                </ToggleButton.Content>
            </ToggleButton>
        </Grid>
    
</UserControl>
