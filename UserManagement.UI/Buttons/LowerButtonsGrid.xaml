<UserControl x:Class="UserManagement.UI.Buttons.LowerButtonsGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:buttons="clr-namespace:UserManagement.UI.Buttons"
             mc:Ignorable="d" 
             d:DesignHeight="450" 
             d:DesignWidth="800">
    
        <Grid Name="LowerButtons">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="70*" />
                <ColumnDefinition Width="70*"/>
                <ColumnDefinition Width="70*"/>
            </Grid.ColumnDefinitions>
            
            <buttons:AppButton3a Grid.Column="0"/>
            <buttons:AppButton3b Grid.Column="1"/>
            <buttons:AppButton3c Grid.Column="2"/>
    </Grid>
</UserControl>
