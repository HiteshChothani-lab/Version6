<UserControl x:Class="UserManagement.UI.Buttons.AppButton2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ToggleButton Name="AppButton2BUtton"
        Margin="2,5"
        AutomationProperties.AutomationId="AppButton2Button"
        IsChecked="{Binding Path=IsCheckedAppButton2}"
        Style="{StaticResource RoundToggleButtonStyle}"
        Visibility="{Binding Path=AppButton2ButtonVisibility, FallbackValue=Visible}"
        >

        <ToggleButton.Content>
            <Grid 
                Margin="5,5" 
                HorizontalAlignment="Center">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Image
                    Grid.Column="0"
                    MaxHeight="25"
                    Margin="2,0"
                    VerticalAlignment="Center"
                    RenderOptions.BitmapScalingMode="HighQuality"
                    Source="{Binding Path=AppButton2Icon1}" />
                <TextBlock
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    FontSize="14"
                    Text="{Binding Path=AppButton2Text}"
                    TextWrapping="Wrap" />
                <Image
                    Grid.Column="2"
                    MaxHeight="25"
                    Margin="2,0"
                    VerticalAlignment="Center"
                    RenderOptions.BitmapScalingMode="HighQuality"
                    Source="{Binding Path=AppButton2Icon2}" />

            </Grid>
        </ToggleButton.Content>

        <i:Interaction.Triggers>
            <i:EventTrigger EventName="Checked">
                <i:InvokeCommandAction 
                    Command="{Binding Path=AppointmentCheckedCommand, Mode=OneWay}" 
                    CommandParameter="{Binding Path=AppButton2CMD}" />
            </i:EventTrigger>
            <i:EventTrigger EventName="Unchecked">
                <i:InvokeCommandAction 
                    Command="{Binding Path=AppointmentUnCheckedCommand, Mode=OneWay}" 
                    CommandParameter="{Binding Path=AppButton2CMD}" />
            </i:EventTrigger>
        </i:Interaction.Triggers>
    </ToggleButton>

</UserControl>
