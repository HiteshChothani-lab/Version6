                                               HorizontalAlignment="Left"
                                               FontSize="20"
                                               Text="17-64" />

                            <Image Grid.Column="1"
                                           MaxHeight="40"
                                           MaxWidth="45"
                                           Margin="5,0"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Right"
                                           RenderOptions.BitmapScalingMode="HighQuality"
                                           Source="/UserManagement.UI;component/Assets/icon_adult.png" />
                        </Grid>
                    </ToggleButton.Content>
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Checked">
                            <i:InvokeCommandAction Command="{Binding Path=AgeCheckedCommand, Mode=OneWay}"
                                                           CommandParameter="2" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </ToggleButton>

            </Grid>

            <Grid Grid.Row="2"
                          Grid.Column="4">
                <ToggleButton Margin="5,5"
                                      HorizontalContentAlignment="Stretch"
                                      IsChecked="{Binding IsCheckedAge3}"
                                      Style="{StaticResource RoundToggleButtonStyle}">
                    <ToggleButton.Content>
                        <Grid Margin="10,0"
                                      HorizontalAlignment="Stretch">
                            <!--<Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>-->

                            <TextBlock VerticalAlignment="Center"
                                               HorizontalAlignment="Left"
                                               FontSize="20"
                                               Text="≥ 65" />

                            <Image Grid.Column="1"
                                           MaxHeight="34"
                                           Margin="10,0"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Right"
                                           RenderOptions.BitmapScalingMode="HighQuality"
                                           Source="/UserManagement.UI;component/Assets/icon_old.png" />
                        </Grid>
                    </ToggleButton.Content>
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Checked">
                            <i:InvokeCommandAction Command="{Binding Path=AgeCheckedCommand, Mode=OneWay}"
                                                           CommandParameter="3" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </ToggleButton>
            </Grid>
            
            <Grid Grid.Row="4"
                          Grid.Column="0" Grid.ColumnSpan="4"
                Margin="20,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Button
                            Grid.Column="0"
                            Margin="5,10,10,0"
                            Background="#F82032"
                            Command="{Binding CancelCommand}"
                            Content="CANCEL"
                            Foreground="White"
                            Style="{StaticResource RoundButtonNoHoverStyle}" />

                <Button
                            Grid.Column="1"
                            Margin="10,10,5,0"
                            Background="#00167E"
                            Command="{Binding SubmitCommand}"
                            Content="OK"
                            Foreground="White"
                            Style="{StaticResource RoundButtonNoHoverStyle}" />
            </Grid>
        </Grid>
        
    </Grid>
</UserControl>
